# pnpm configuration to allow required build scripts
# The warning indicates pnpm is ignoring build scripts for security
# We need to explicitly allow them for packages that require post-install scripts

# Allow all build scripts (required for Prisma, Tailwind, etc.)
# This is needed because pnpm 9+ blocks build scripts by default for security
ignore-scripts=false

# Enable pre/post scripts
enable-pre-post-scripts=true

# Vercel compatibility
auto-install-peers=true
prefer-frozen-lockfile=false